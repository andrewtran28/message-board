<html>
    <head>
        <title><%= message.user %>'s Message</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
      <%- include('header', {title: 'myMessageBoard'}) %>
      <div class="message-detail">
        <div class="message-info">
          <span class="message-user"><%= message.user %></span>
          <span class="message-timestamp"><%= message.added %></span>
        </div>

        <div class="message-text"><%= message.text %></div>
        <span class="message-id">Message ID: <%= message.id %></span>
      </div>
      <div><a href="/">Return to Message Board</a></div>
    </body>
</html>